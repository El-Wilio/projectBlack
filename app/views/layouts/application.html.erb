<!DOCTYPE html>
<html>
<head>
  <title>ProjectBlack</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>
<body>
<div id="menu">
  <%= link_to "Home", "/" %>
  <%= link_to "Clubs", "/" %>
  <% if user_signed_in? %>
  <%= link_to "Profile", "/home/profile" %>
  <% else %>
  <%= link_to "Sign in", "/users/sign_in" %>
  <% end %>
  <% if !user_signed_in? %>
  <%= link_to("/users/sign_up") do %>
  <span style="font-size: 14px; position: absolute; right: 2em">Join the club</span>
  <% end %>
  <% end %>
</div>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<div id="content">
<%= yield %>
</div>
</body>
</html>
